<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mortgage Management"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/property_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/mortgage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mortgage Selected Property" />

    <Button
        android:id="@+id/unmortgage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repay Mortgage on Selected Property" />

</LinearLayout>

