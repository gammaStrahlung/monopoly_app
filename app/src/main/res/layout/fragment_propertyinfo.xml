<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/current_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_rent"
        app:layout_constraintBottom_toTopOf="@+id/base_rent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/four_house_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four_houses_rent"
        app:layout_constraintBottom_toTopOf="@+id/hotel_rent"
        app:layout_constraintTop_toBottomOf="@+id/three_house_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/three_house_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three_house_rent"
        app:layout_constraintBottom_toTopOf="@+id/four_house_rent"
        app:layout_constraintTop_toBottomOf="@+id/two_house_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/two_house_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_houses_rent"
        app:layout_constraintBottom_toTopOf="@+id/three_house_rent"
        app:layout_constraintTop_toBottomOf="@+id/one_house_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        app:layout_constraintBottom_toTopOf="@+id/current_rent"
        app:layout_constraintTop_toBottomOf="@+id/owner"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/house_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/house_count"
        app:layout_constraintBottom_toTopOf="@+id/hotel_count"
        app:layout_constraintTop_toBottomOf="@+id/hotel_rent"
        tools:ignore="UnknownIdInLayout"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/base_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_rent"
        app:layout_constraintBottom_toTopOf="@+id/full_set_rent"
        app:layout_constraintTop_toBottomOf="@+id/current_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/hotel_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotel_rent"
        app:layout_constraintBottom_toTopOf="@+id/house_count"
        app:layout_constraintTop_toBottomOf="@+id/four_house_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/full_set_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rent_full_set"
        app:layout_constraintBottom_toTopOf="@+id/one_house_rent"
        app:layout_constraintTop_toBottomOf="@+id/base_rent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/one_house_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_house_rent"
        app:layout_constraintBottom_toTopOf="@+id/two_house_rent"
        app:layout_constraintTop_toBottomOf="@+id/full_set_rent"
        tools:layout_editor_absoluteX="26dp" />

    <ImageView
        android:id="@+id/propertyPicture"
        android:layout_width="454dp"
        android:layout_height="464dp"
        app:layout_constraintBottom_toTopOf="@+id/buildingSlot4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="86dp"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_count" />

    <TextView
        android:id="@+id/property_name"
        android:layout_width="208dp"
        android:layout_height="92dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="27dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/owner"
        app:layout_constraintEnd_toStartOf="@+id/buildingSlot2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertyPicture" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/owner"
        app:layout_constraintBottom_toTopOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/property_name"
        tools:layout_editor_absoluteX="24dp" />

    <ImageView
        android:id="@+id/buildingSlot1"
        style="@style/buildingSlot1"
        android:layout_width="79dp"

        android:layout_marginEnd="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buildingSlot3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/construction_site" />

    <ImageView
        android:id="@+id/buildingSlot2"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buildingSlot4"
        app:srcCompat="@drawable/construction_site" />

    <ImageView
        android:id="@+id/buildingSlot3"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buildingSlot2"
        app:srcCompat="@drawable/construction_site" />

    <ImageView
        android:id="@+id/buildingSlot4"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/property_name"
        app:layout_constraintTop_toBottomOf="@+id/propertyPicture"
        app:srcCompat="@drawable/construction_site" />

    <TextView
        android:id="@+id/hotel_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotel_count"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/house_count"
        tools:layout_editor_absoluteX="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>